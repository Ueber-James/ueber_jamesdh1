import React, { useState } from 'react';

const App = () => {
  const [cards, setCards] = useState([]);
  const [name, setName] = useState('');
  const [color, setColor] = useState('');
  const [errorMessage, setErrorMessage] = useState('');

  const addCard = () => {
    if (name.trim().length < 3 || color.trim().length < 6) {
      setErrorMessage('Por favor, verifique os dados inseridos no formulÃ¡rio');
      return;
    }

    const newCard = { name, color };
    setCards([...cards, newCard]);
    setName('');
    setColor('');
    setErrorMessage('');
  };

  const handleNameChange = (event) => {
    setName(event.target.value);
  };

  const handleColorChange = (event) => {
    setColor(event.target.value);
  };

  return (
    <div
      style={{
        width: '100%',
        height: '100%',
        padding: '84px 264px 622px 264px',
        background: '#151515',
        justifyContent: 'center',
        alignItems: 'center',
        display: 'inline-flex',
      }}
    >
      <div
        style={{
          flex: '1 1 0',
          alignSelf: 'stretch',
          flexDirection: 'column',
          justifyContent: 'flex-start',
          alignItems: 'flex-start',
          gap: '42px',
          display: 'inline-flex',
        }}
      >
        <div
          style={{
            width: '1200px',
            height: '309px',
            position: 'relative',
          }}
        >
          <div
            style={{
              width: '1200px',
              height: '309px',
              left: '0px',
              top: '0px',
              position: 'absolute',
              background: '#202020',
              borderRadius: '12px',
            }}
          ></div>
          <div
            style={{
              width: '558px',
              height: '72px',
              left: '32px',
              top: '124px',
              position: 'absolute',
            }}
          >
            <div
              style={{
                width: '558px',
                height: '48px',
                left: '0px',
                top: '24px',
                position: 'absolute',
                background: '#353535',
                borderRadius: '12px',
              }}
            ></div>
            <div
              style={{
                width: '558px',
                left: '0px',
                top: '0px',
                position: 'absolute',
                color: 'rgba(255, 255, 255, 0.60)',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                wordWrap: 'break-word',
              }}
            >
              Nome
            </div>
            <input
              type="text"
              value={name}
              onChange={handleNameChange}
              style={{
                width: '558px',
                position: 'absolute',
                left: '0',
                bottom: '0',
                padding: '12px',
                background: 'transparent',
                border: 'none',
                outline: 'none',
                color: 'white',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                borderRadius: '12px',
                border: '2px solid rgba(255, 255, 255, 0.60)',
              }}
            />
          </div>
          <div
            style={{
              width: '562px',
              height: '72px',
              left: '606px',
              top: '124px',
              position: 'absolute',
            }}
          >
            <div
              style={{
                width: '562px',
                height: '48px',
                left: '0px',
                top: '24px',
                position: 'absolute',
                background: '#353535',
                borderRadius: '12px',
              }}
            ></div>
            <div
              style={{
                left: '12px',
                top: '36px',
                position: 'absolute',
                color: 'rgba(255, 255, 255, 0.40)',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                wordWrap: 'break-word',
              }}
            >
              Insira sua cor no formato Hexadecimal
            </div>
            <div
              style={{
                width: '562px',
                left: '0px',
                top: '0px',
                position: 'absolute',
                color: 'rgba(255, 255, 255, 0.60)',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                wordWrap: 'break-word',
              }}
            >
              Cor
            </div>
            <input
              type="text"
              value={color}
              onChange={handleColorChange}
              style={{
                width: '562px',
                position: 'absolute',
                left: '0',
                bottom: '0',
                padding: '12px',
                background: 'transparent',
                border: 'none',
                outline: 'none',
                color: 'white',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                borderRadius: '12px',
                border: '2px solid rgba(255, 255, 255, 0.60)',
              }}
            />
          </div>
          <div
            onClick={addCard}
            style={{
              width: '231px',
              height: '57px',
              left: '937px',
              top: '220px',
              position: 'absolute',
              background: '#36CE7C',
              borderRadius: '12px',
              display: 'flex',
              justifyContent: 'center',
              alignItems: 'center',
              cursor: 'pointer',
            }}
          >
            <div
              style={{
                color: 'white',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                wordWrap: 'break-word',
              }}
            >
              ADICIONAR
            </div>
          </div>
          {errorMessage && (
            <div
              style={{
                left: '32px',
                top: '476px',
                position: 'absolute',
                color: 'red',
                fontSize: '16px',
                fontFamily: 'Poppins',
                fontWeight: '500',
                wordWrap: 'break-word',
              }}
            >
              {errorMessage}
            </div>
          )}
          <div
            style={{
              left: '32px',
              top: '32px',
              position: 'absolute',
              color: 'white',
              fontSize: '40px',
              fontFamily: 'Poppins',
              fontWeight: '900',
              wordWrap: 'break-word',
            }}
          >
            ADICIONAR NOVA COR
          </div>
        </div>
        <div
          style={{
            color: 'white',
            fontSize: '40px',
            fontFamily: 'Poppins',
            fontWeight: '900',
            wordWrap: 'break-word',
          }}
        >
          CORES FAVORITAS
        </div>
        {cards.length > 0 && (
          <div>
            {cards.map((card, index) => (
              <div
                key={index}
                style={{
                  background: card.color,
                  padding: '12px',
                  borderRadius: '8px',
                  marginBottom: '8px',
                }}
              >
                <div
                  style={{
                    color: 'white',
                    fontSize: '16px',
                    fontFamily: 'Poppins',
                    fontWeight: '500',
                    wordWrap: 'break-word',
                  }}
                >
                  {card.name}
                </div>
                <div
                  style={{
                    color: 'white',
                    fontSize: '16px',
                    fontFamily: 'Poppins',
                    fontWeight: '500',
                    wordWrap: 'break-word',
                  }}
                >
                  {card.color}
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
};

export default App;
